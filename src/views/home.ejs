<%- include('partials/_header'); -%>
<div>
  <h2 align=center class="mt-4">User Details</h2>
</div>

<!-- for searching the users  -->
<form action="/search" method="POST">
  <div class="form-group">
    <input type="text" name="searchfield" placeholder="Enter Name To Search"
      style="position: absolute; top: 25%; left: 50%; transform: translate(-50%,-50%); border-radius: 20px;"
      class="form-control w-50" autofocus required>
    <span>
      <button type="submit" class="btn btn-primary"
        style="position: absolute; top: 35%; left: 50%; transform: translate(-50%,-50%); border-radius: 10px;">
        Search User
      </button>
    </span>
  </div>
</form>

<div align=right><a href="/" class="btn btn-info"
    style="border-top-left-radius: 30px; border-bottom-left-radius: 30px;">Add
    User</a></div>
<div class="container" style="margin-top: 150px !important;">
  <div class="row">
    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td>Sno.</td>
            <td>Name</td>
            <td>Father Name</td>
            <td>Email</td>
            <td>Phone</td>
            <td>College</td>
            <td>Address</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
          <% for(var i = 0; i < data.length; i++) { %>
          <tr class="table-success">
            <td><%= (i + 1) %></td>
            <td><%= data[i].username %></td>
            <td><%= data[i].fathername %></td>
            <td><%= data[i].email %></td>
            <td><%= data[i].phone %></td>
            <td><%= data[i].college %></td>
            <td><%= data[i].per_address %></td>
            <td>
              <a href="/update/<%= data[i].id %>" class="btn btn-info" style="border-radius: 5px;">Edit</a>
              <a href="/delete/<%= data[i].id %>" class="btn btn-danger mt-2" style="border-radius: 5px;">Delete</a>
            </td>
          </tr>
          <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%- include('partials/_footer'); -%>